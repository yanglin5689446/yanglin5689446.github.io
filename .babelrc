{
  "presets": ["es2015", "react"],
  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
              "transform": "react-transform-hmr",
              // change this to react-native if writing react-native
              "imports": ["react"],
              "locals": ["module"]
            }]
        }],
        ["react-css-modules", {
          "webpackHotModuleReloading": true,
          "filetypes": {
            ".scss": {
              "syntax": "postcss-scss"
            }
          }
        }],
        "transform-object-rest-spread"
      ]
    },
    "production": {
      "plugins": [
        "transform-object-rest-spread"
      ]
    }
  }
}
